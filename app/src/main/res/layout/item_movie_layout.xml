<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imageview_item_movie_poster"
                android:layout_width="match_parent"
                tools:src="@drawable/ic_sample_image"
                android:layout_height="300dp" />

            <TextView
                android:layout_marginTop="8dp"
                tools:text="Sample Movie"
                android:textSize="16sp"
                android:id="@+id/textview_item_movie_title"
                android:fontFamily="@font/roboto_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview_item_movie_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="12sp"
                    tools:text="2014" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:layout_gravity="right|bottom"
                        android:layout_width="16dp"
                        tools:src="@drawable/ic_star"
                        android:layout_height="16dp" />

                    <TextView
                        android:layout_marginTop="4dp"
                        tools:text="7.2"
                        android:gravity="right"
                        android:textSize="12sp"
                        android:id="@+id/textview_item_movie_rate"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>